FROM alpine:3.17
LABEL maintainer="me@iskywind.com"

RUN { \
	apk add --update linux-headers gcc python3-dev libffi-dev openssl-dev cargo libxslt-dev zlib-dev libxml2-dev musl-dev nginx bash supervisor transmission-daemon python3 cargo curl tzdata py3-cryptography; \
	curl https://bootstrap.pypa.io/get-pip.py | python3; \
	pip install 'transmissionrpc'; \
}

